"""
Simplified model and serializer tests for EmployeeInvitation
"""

from django.test import TestCase
from django.contrib.auth import get_user_model
from django.utils import timezone

from obeeomaapp.models import Employer, EmployeeInvitation
from obeeomaapp.serializers import EmployeeInvitationCreateSerializer

User = get_user_model()


# ----------------------
# User and Employer Tests
# ----------------------
class BasicUserModelTest(TestCase):
    """Test User model"""

    def test_create_user(self):
        user = User.objects.create_user(
            username='testuser',
            email='test@example.com',
            password='testpass123'
        )
        self.assertEqual(user.username, 'testuser')
        self.assertEqual(user.email, 'test@example.com')
        self.assertTrue(user.check_password('testpass123'))

    def test_create_superuser(self):
        admin = User.objects.create_superuser(
            username='admin',
            email='admin@example.com',
            password='adminpass123'
        )
        self.assertTrue(admin.is_superuser)
        self.assertTrue(admin.is_staff)


class BasicEmployerModelTest(TestCase):
    """Test Employer model"""

    def test_create_employer(self):
        employer = Employer.objects.create(
            name='Test Company',
            is_active=True
        )
        self.assertEqual(employer.name, 'Test Company')
        self.assertTrue(employer.is_active)


# ----------------------
# EmployeeInvitation Model Tests
# ----------------------
class BasicInvitationModelTest(TestCase):
    """Test EmployeeInvitation model"""

    def setUp(self):
        self.user = User.objects.create_user(
            username='employer1',
            email='employer@example.com',
            password='pass123'
        )
        self.employer = Employer.objects.create(
            name='Test Company',
            is_active=True
        )

    def test_create_invitation(self):
        invitation = EmployeeInvitation.objects.create(
            employer=self.employer,
            email='employee@example.com',
            invited_by=self.user,
            message='Welcome!',
            employeephone='1234567890',
            employeedepartment='Engineering'
        )

        self.assertEqual(invitation.email, 'employee@example.com')
        self.assertEqual(invitation.employer, self.employer)
        self.assertEqual(invitation.message, 'Welcome!')
        self.assertEqual(invitation.employeephone, '1234567890')
        self.assertEqual(invitation.employeedepartment, 'Engineering')

        # Check pending status
        self.assertIsNone(invitation.accepted_at)
        self.assertIsNone(invitation.rejected_at)
        self.assertEqual(invitation.status, 'pending')


# ----------------------
# EmployeeInvitation Serializer Tests
# ----------------------
class EmployeeInvitationCreateSerializerTest(TestCase):
    """Test EmployeeInvitationCreateSerializer"""

    def setUp(self):
        self.user = User.objects.create_user(
            username='employer1',
            email='employer@example.com',
            password='pass123'
        )
        self.employer = Employer.objects.create(
            name='Test Company',
            is_active=True
        )

    def test_invitation_creation(self):
        data = {
            'email': 'employee@example.com',
            'message': 'Welcome to the company!',
            'employeephone': '1234567890',
            'employeedepartment': 'Engineering'
        }
        serializer = EmployeeInvitationCreateSerializer(
            data=data,
            context={'employer': self.employer, 'user': self.user}
        )
        self.assertTrue(serializer.is_valid(), serializer.errors)
        invitation = serializer.save()

        # Check fields
        self.assertEqual(invitation.email, 'employee@example.com')
        self.assertEqual(invitation.employer, self.employer)
        self.assertEqual(invitation.message, 'Welcome to the company!')
        self.assertEqual(invitation.employeephone, '1234567890')
        self.assertEqual(invitation.employeedepartment, 'Engineering')

        # OTP should be generated
        self.assertIsNotNone(invitation.otp)
        self.assertEqual(len(invitation.otp), 6)
        self.assertIsNotNone(invitation.otp_expires_at)

        # Check pending status
        self.assertIsNone(invitation.accepted_at)
        self.assertIsNone(invitation.rejected_at)
        self.assertEqual(invitation.status, 'pending')
